<!ENTITY % node.att     "id       ID    #IMPLIED
                         added    CDATA #IMPLIED">

<!ENTITY % url.att      "href     CDATA #REQUIRED
                         visited  CDATA #IMPLIED
                         modified CDATA #IMPLIED">

<!ENTITY % nodes.mix    "bookmark">

<!ENTITY % metadata.mix "applications, groups?, icon?, private?">

<!ELEMENT xbel (title?, info?, desc?, (%nodes.mix;)*)>
<!ATTLIST xbel
            %node.att;
            version  CDATA      #FIXED "1.0"
>
<!ELEMENT title      (#PCDATA)>

<!--=================== Info ======================================-->

<!ELEMENT info (metadata+)>

<!ELEMENT metadata ((%metadata.mix;)*)>
<!ATTLIST metadata
            owner    CDATA      #FIXED "http://freedesktop.org"
>

<!--=================== Applications ==============================-->

<!ELEMENT applications (application+)>

<!ELEMENT application EMPTY>
<!ATTLIST application
            name      CDATA      #REQUIRED
	    exec      CDATA      #REQUIRED
	    timestamp CDATA      #REQUIRED
	    count     CDATA      #REQUIRED
>

<!--=================== Groups ===================================-->

<!ELEMENT groups (groups+)

<!ELEMENT group      (#PCDATA)>

<!--=================== Icon =====================================-->

<!ELEMENT icon EMPTY>
<!ATTLIST icon
            href      CDATA      #REQUIRED
	    type      CDATA      #IMPLIED
>

<!--=================== Private ==================================-->

<!ELEMENT private EMPTY>
